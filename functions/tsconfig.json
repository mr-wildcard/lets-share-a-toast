{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "./typings"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "functions/lib",
    "sourceMap": true,
    "target": "ESNext",
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": [
    "./functions/src"
  ]
}
